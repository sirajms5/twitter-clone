<p style="color: green"><%= notice %></p>

<h4 class="mt-3">Explore</h4>

<div class="mt-4" id="tweets">
  <% @tweets.each do |tweet| %>
    <% render tweet %>
    <%= link_to tweet, class:"anchor-tweet" do %>
      <div class="card mb-3 tweet-card">
        <div class="card-body">
          <div class="d-flex">
            <h6 class="card-title">
              <%= tweet.profile.first_name + " " + tweet.profile.last_name %>
            </h6>
            <p class="ms-2">
              <i class="h6">Â·</i> 
              <%= time_ago_in_words(tweet.created_at) %> 
            </p>
          </div>
          <p class="card-text">          
            <%= tweet.description %>
          </p>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
