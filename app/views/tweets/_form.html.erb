      <h2><%= pluralize(tweet.errors.count, "error") %> prohibited this tweet from being saved:</h2>

      <ul>
        <% tweet.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mt-3 ms-4">
    <%= form.text_area :description, class:"form-control", placeholder: "What's happening?", rows: 3, required: true %>
  </div>

  <div>
    <%= form.number_field :profile_id, id: :profile_id, value: @profile_id, type: "hidden" %>
  </div>

  <div>
    <%= form.number_field :user_id, id: :profile_user_id, value: current_user.id, type: "hidden" %>
  </div>

  <div class="d-flex justify-content-end mt-3">
    <div>
      <%= form.submit class:"btn btn-primary" %>
    </div>
  </div>
<% end %>
